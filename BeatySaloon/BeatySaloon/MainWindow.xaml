                    </Border>
                </StackPanel>

            </Grid>

            <StackPanel Height="30" Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button  Content="1" Margin="5" Padding="3 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
                <Button Click ="btn_2" Content="2" Margin="0 5 5 5" Padding="3 1" Foreground="Gray" Background="#FFFF4A6D" BorderBrush="#FFFF4A6D" BorderThickness="2"></Button>
            </StackPanel>


        </Grid>
    </Grid>
</Window>
