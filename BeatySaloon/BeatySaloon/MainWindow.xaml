<Window x:Class="BeatySaloon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatySaloon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/beauty_logo.png" Height="30" Margin="5"></Image>

                <TextBox Grid.Column="1" Height="30" Margin="5" VerticalAlignment="Center" FontFamily="Segoe UI"></TextBox>

                <ComboBox Grid.Column="2" Margin="5" VerticalAlignment="Center" FontFamily="Segoe UI">
                    <ComboBoxItem IsSelected="True">По убыванию</ComboBoxItem>
                    <ComboBoxItem>По возрастанию</ComboBoxItem>
                </ComboBox>

                <ComboBox Grid.Column="3" Margin="5" VerticalAlignment="Center" FontFamily="Segoe UI">
                    <ComboBoxItem IsSelected="True">Фильтр 1</ComboBoxItem>
                    <ComboBoxItem>Фильтр 2</ComboBoxItem>
                    <ComboBoxItem>Фильтр 3</ComboBoxItem>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Border BorderBrush="LightGray" BorderThickness="2" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Background="#ffffe1">
                            <Rectangle Width="79.51" Fill="#FFFF4A6D"></Rectangle>
                            <StackPanel Margin="10 0 0 0" >
                                <TextBlock Foreground="Gray" FontSize="13"><Run Language="ru-ru" Text="Наименование услуги"/></TextBlock>
                                <TextBlock Foreground="Gray" FontSize="13"><Run Language="ru-ru" Text="800 рублей за 30 минут"/></TextBlock>

                                <StackPanel Orientation="Horizontal" Margin=" 0 15 0 0">
                                    <StackPanel Orientation="Horizontal" Margin=" 0 5 0 0">
                                        <Button Content="Редактировать" Margin="0 0 10 0" Padding="10 1 10 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
                                        <Button Content="Удалить" Margin="0 0 10 0" Padding="10 1 10 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <Border BorderBrush="LightGray" BorderThickness="2" Margin="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Background="#FFFFFFE1">
                            <Rectangle Width="79.51" Fill="#FFE1E4FF"></Rectangle>
                            <StackPanel Margin="10 0 0 0" >
                                <TextBlock Text="Наименование услуги" Foreground="Gray" FontSize="13"></TextBlock>
                                <TextBlock TextWrapping="Wrap"> 
                                    <Span Foreground="Gray" FontSize="13" TextDecorations="Strikethrough">800</Span>
                                        <Span Foreground="Gray" FontSize="13">720 рублей за 30 минут</Span>
                                </TextBlock>
                                <TextBlock Text="*Скидка 10%"  Foreground="Gray" FontSize="8"></TextBlock>
                                <StackPanel Orientation="Horizontal" Margin=" 0 5 0 0">
                                    <Button Content="Редактировать" Margin="0 0 10 0" Padding="10 1 10 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
                                    <Button Content="Удалить" Margin="0 0 10 0" Padding="10 1 10 1" Foreground="Gray" Background="White" BorderBrush="LightGray" BorderThickness="2"></Button>
                                </StackPanel>
                            </StackPanel>
